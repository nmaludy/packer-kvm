{
  "builders": [
    {
      "accelerator": "kvm",
      "boot_command": [
        "<up><wait><tab><wait> net.ifnames=0 biosdevname=0 text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `kickstart_file`}}<enter><wait>"
      ],
      "boot_wait": "40s",
      "disk_cache": "none",
      "disk_compression": true,
      "disk_discard": "unmap",
      "disk_interface": "virtio",
      "disk_size": "{{user `disk_size`}}",
      "format": "qcow2",
      "headless": "{{user `headless`}}",
      "http_directory": "centos-8/http",
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "name": "{{user `vm_os_name`}}-{{user `vm_os_version`}}-template",
      "net_device": "virtio-net",
      "output_directory": "packer-{{ build_name }}",
      "qemuargs": [
        [
          "-m",
          "{{user `ram`}}M"
        ],
        [
          "-smp",
          "{{user `cpu`}}"
        ]
      ],
      "shutdown_command": "sudo /usr/sbin/shutdown -h now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "30m",
      "ssh_username": "{{user `ssh_username`}}",
      "type": "qemu",
      "vm_name": "packer-{{ build_name }}.img"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "inline": [
        "yum -y upgrade"
      ],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "inline": [
        "systemctl reboot"
      ],
      "type": "shell"
    },
    {
      "execute_command": "\"{{ .Path }}\"",
      "remote_folder": "/root",
      "script": "{{template_dir}}/../scripts/rhel_cleanup.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "cpu": "2",
    "disk_size": "32768",
    "headless": "true",
    "iso_checksum": "24544c943c0f98f3096b027bb59a93b390853b2b3b538e13566515f9121be5fc",
    "iso_checksum_type": "sha256",
    "iso_urls": "http://mirrors.rit.edu/centos/8-stream/isos/x86_64/CentOS-Stream-8-x86_64-20201211-dvd1.iso",
    "kickstart_file": "centos-8-kickstart.cfg",
    "ram": "2048",
    "ssh_password": "Packer",
    "ssh_username": "root",
    "vm_os_name": "centos",
    "vm_os_version": "8"
  }
}
